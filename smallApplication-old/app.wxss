/*自定义toast  */
.xn-toast{
  max-width:80%;
  min-width:90rpx;
  position: fixed;
  text-align: center;
  left: 50%; 
  transform: translateX(-50%);  
  top : 40%;
  background:rgba(0,0,0,0.5);
  color: #fff;
  font-size: 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top : 10rpx;
  padding-bottom : 10rpx;
}
/*文字超出省略  */
.text-ellipsis{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
/*链接active样式  */
.hover-class{
  opacity: 0.8
}

/*panel  */
.panel{
  padding: 32rpx 30rpx 30rpx 30rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  color: #666
}
.panel-title{
  font-weight: 700;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #000
}
.panel-content{
  margin-top: 32rpx
}
/*三角css  */
.triangle-down{
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 10rpx solid #999;
    margin-left: 6rpx
}
.triangle-up{
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-bottom: 10rpx solid #999;
    margin-left: 6rpx
}
/*老价格  */
.oldPrice{
  color: #999;
  font-size: 20rpx;
  text-decoration: line-through
}
.oldPrice:before{
  content: '￥'
}