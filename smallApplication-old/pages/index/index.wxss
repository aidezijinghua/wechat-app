/**index.wxss**/
page{
  background-color: #f5f5f5
}
.slide-image{
  width: 100%;
  height : 360rpx
}
.nav-container{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  padding-bottom: 20rpx
}
.nav-link{
  width: 25%;
  margin-top: 20rpx
}
.nav-item{
  text-align: center
}
.nav-item image{
  width: 90rpx;
  height : 90rpx;
}
.nav-item-text{
  display: block;
  font-size: 24rpx;
  color : #666
}
.business-list{
  background-color: #fff;
  margin-top: 20rpx
}
.index-title{
  padding: 32rpx 20rpx 0;
  font-weight: 600;
  font-size: 32rpx;
  border-top: 1px solid #eee
}
.business-item{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee
}
.business-item-logo{
  padding: 30rpx 20rpx
}
.business-item-logo image{
  width: 130rpx;
  height : 130rpx;
  border: 1rpx solid #eee;
  border-radius: 4rpx
}
.business-item-content{
  width: 580rpx;
  padding: 30rpx 20rpx 30rpx 0;
  font-size: 22rpx;
  color: #666
}
.business-item-content-top{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 130rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee
}
.business-item-content-title-line{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.business-item-content-line{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 15rpx
}
.business-item-content-line-title{
  display: flex;
  align-items: center;
  font-weight: 700;
  height: 36rpx;
  font-size: 30rpx;
  max-width: 556rpx;
  color: #000
}
.business-item-content-line-title-dec{
  border : 1rpx solid #ddd;
  border-radius: 1rpx;
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  text-align: center;
  vertical-align: baseline;
  color: #999
}
.business-item-content-line-left{
  display: flex;
  align-items: center
}
.split:before{
  content: "|";
  margin: 6rpx
}
.center-margin{
  margin: 0 8rpx
}
.business-item-content-line-right{
  display: flex;
  align-items: center;
  color: #999
}
.tip-jian{
  text-align: center;
  margin-right: 12rpx;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #fff;
  border: 1px solid rgb(240, 115, 115);
  border-radius: 4rpx;
  background-color: rgb(240, 115, 115);
}
.tip-fengniao{
  height: 26rpx;
  line-height: 26rpx;
  font-size: 20rpx;
  text-align: center;
  vertical-align: baseline;
  color: #fff;
  background: #0085ff;
  padding: 5rpx;
  border-radius: 5rpx;
  border: 1rpx solid #0085ff 
}
.discountToggle{
  padding-top:15rpx;
  padding-left : 20rpx
}

