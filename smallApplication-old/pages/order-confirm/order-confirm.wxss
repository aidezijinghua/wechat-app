Page{
  background-color: #f5f5f5;
  padding-bottom: 88rpx
}
.orderInfoContainer{
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  font-size: 32rpx;
  color: #333;
}
.orderInfoHead{
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #eee
}
.orderInfoHeadLogo{
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx
}
.orderInfoContent{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee
}
.orderInfoContentItem{
  padding: 15rpx 0
}
.bottomContainer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: auto;
  height: 88rpx;
  background-color: #3c3c3c;
  color: #fff;
  padding-left: 20rpx
}
.confirmPay{
  height: 100%;
  min-width: 190rpx;
  padding: 0 10rpx;
  text-align: center;
  background-color: #00d762;
  line-height: 88rpx;
  font-size: 34rpx
}
.disabled{
  background-color:#535356
}